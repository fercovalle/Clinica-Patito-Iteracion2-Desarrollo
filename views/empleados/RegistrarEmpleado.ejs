<!doctype html>

<html lang="es">

    <%-include('../headerGeneral');%> 

<body>
    <%-include('../menus/MenuAdministracion');%>
    <div class="container-fluid">
        <form>
            <h1>Registrar Empleado</h1>
            <div class="mb-3">
                <label for="cui" class=f orm-label>CUI:</label>
                <input type="number" class="form-control" id="cui" placeholder="Ingrese su Código Único de Identificación" required>
            </div>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombres:</label>
                <input type="text" class="form-control" id="employName" placeholder="Ingrese sus nombres" required>
            </div>
            <div class="mb-3">
                <label for="apellido" class="form-label">Apellidos:</label>
                <input type="text" class="form-control" id="employLastname" placeholder="Ingrese sus apellidos" required>
            </div>
            <div class="mb-3">
                <label for="nacimiento" class="form-label">Fecha de nacimiento:</label>
                <input type="date" class="form-control" id="employDate" required>
            </div>
            <div class="mb-3">
                <label for="telefono" class="form-label">Número telefoníco:</label>
                <input type="number" class="form-control" id="employNumber" placeholder="Ingrese su número de teléfono" required>
            </div>
            <div class="mb-3">
                <label for="correo" class="form-label">Correo electrónico:</label>
                <input type="email" class="form-control" id="employEmail" placeholder="Ingrese sus correo electrónico" required>
            </div>
            <div class="mb-3">
                <label for="employStatus" class="form-label">Estado del empleado:</label>
                <input class="form-control" list="datalistOptions" id="employStatus" placeholder="Seleccione estado del empleado" required>
                <datalist id="datalistOptions">
                    <option value="Habilitado">
                    <option value="Deshabilitado">
                  </datalist>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
    <%-include('../footerGeneral');%>
</body>

</html>